@model  IList<MVCApplicationFramework.Entities.User>
@{
    ViewBag.Title = "Index";
}

<h2>User's List</h2>

<table id="datatables-UserList" class="table table-bordered" style="table-layout: fixed; align-content:center">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Login Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
        </tr>
    </thead>
    <tbody style="align-content:center">

        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr style="align-content:center">
                    <td class="col-md-1">
                       @Html.ActionLink(Convert.ToString(@item.ID), "Index", "UserManager")
                    </td>
                    <td class="col-md-1">
                        @item.LoginName 
                    </td>
                    <td class="col-md-1">
                        @item.FirstName
                    </td>
                    <td class="col-md-1">
                        @item.LastName
                    </td>
                </tr>
            }
        }
        else
        {
            <tr id="trNoRecord">
                <td colspan="6" class="text-center">No record found. </td>
            </tr>
        }


    </tbody>
</table>